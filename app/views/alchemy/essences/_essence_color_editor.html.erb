<div class="essence_color content_editor<%= options[:display_inline].to_s == 'true' ? ' display_inline' : '' %>" id="<%= content.dom_id %>">
  <%= content_label(content) %>
  <%= text_field_tag(
    content.form_field_name,
    content.ingredient,
    class: ["thin_border #{content.settings[:linkable] ? ' text_with_icon' : ''}", html_options[:class]].join(' '),
    style: html_options[:style],
    type: content.settings_value(:input_type) || "color"
  ) %>
  <%= hidden_field_tag content.form_field_name(:format), content.essence.format %>
</div>
